<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <parent>
        <artifactId>spring-boot-config</artifactId>
        <groupId>com.tomoncle</groupId>
        <version>2.1.2</version>
    </parent>
    <modelVersion>4.0.0</modelVersion>

    <artifactId>spring-boot-config-monitor-server</artifactId>

    <dependencies>
        <!--################ 服务端配置 ################-->
        <!--
            作为服务端时，启用以下配置
            针对Actuator接口进行UI美化封装的监控工具
            https://github.com/codecentric/spring-boot-admin
        -->
        <!-- https://mvnrepository.com/artifact/de.codecentric/spring-boot-admin-server -->
        <dependency>
            <groupId>de.codecentric</groupId>
            <artifactId>spring-boot-admin-server</artifactId>
            <version>${spring-boot-admin.version}</version>
        </dependency>
        <!-- https://mvnrepository.com/artifact/de.codecentric/spring-boot-admin-server-ui -->
        <dependency>
            <groupId>de.codecentric</groupId>
            <artifactId>spring-boot-admin-server-ui</artifactId>
            <version>${spring-boot-admin.version}</version>
        </dependency>

        <!--################ spring-boot-admin Plugins ################-->
        <!--
        https://mvnrepository.com/artifact/de.codecentric/spring-boot-admin-server-ui-hystrix
        hystrix-dashboard
            加入该依赖需要配置
            Add the /hystrix.stream to the proxified endpoints
            spring.boot.admin.routes.endpoints＝......,loggers,auditevents,hystrix.stream
        -->
        <dependency>
            <groupId>de.codecentric</groupId>
            <artifactId>spring-boot-admin-server-ui-hystrix</artifactId>
            <version>${spring-boot-admin.server.ui.hystrix.version}</version>
        </dependency>
        <!--
        https://mvnrepository.com/artifact/de.codecentric/spring-boot-admin-server-ui-activiti
        Activiti UI Module
            加入该依赖需要配置
            spring.boot.admin.routes.endpoints＝......,loggers,activiti
        -->
        <dependency>
            <groupId>de.codecentric</groupId>
            <artifactId>spring-boot-admin-server-ui-activiti</artifactId>
            <version>${spring-boot-admin.server.ui.activiti.version}</version>
        </dependency>

        <!--################ 测试依赖 ################-->
        <dependency>
            <groupId>com.tomoncle</groupId>
            <artifactId>spring-boot-config-constants</artifactId>
            <version>${project.version}</version>
            <scope>test</scope>
        </dependency>
    </dependencies>

</project>